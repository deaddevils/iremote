<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="infraredcode2" namespace="/infraredcode2"  extends="iremotebasepackage">
        <interceptors>
            <interceptor name="releaseInterceptor" class="com.iremote.interceptor.HibernateReleaseInterceptor"/>
            <interceptor name="logInterceptor" class="com.iremote.interceptor.LogInterceptor"/>
            <interceptor name="httpsInterceptor" class="com.iremote.interceptor.HttpsInterceptor"/>
            <interceptor name="sessionInterceptor" class="com.iremote.interceptor.SessionInterceptor"/>
            <interceptor-stack name="nosession">
                <interceptor-ref name="defaultStack"/>
                <interceptor-ref name="httpsInterceptor"/>
                <interceptor-ref name="releaseInterceptor"/>
                <interceptor-ref name="logInterceptor"/>
            </interceptor-stack>
        </interceptors>

        <default-interceptor-ref name="nosession"/>
        <global-results>
            <result name="success" type="json">
                <param name="excludeNullProperties">true</param>
                <param name="ignoreHierarchy">false</param>
            </result>
        </global-results>

        <action name="queryproductor" class="com.iremote.action.infraredcode2.QueryProductor" method="execute"/>
        <action name="querycodeliberay" class="com.iremote.action.infraredcode2.QueryCodeLiberay" method="execute"/>
        <action name="acoperate" class="com.iremote.action.infraredcode2.ACOperateAction" method="execute"/>
        <action name="stboperate" class="com.iremote.action.infraredcode2.StbOperationAction" method="execute"/>
        <action name="tvoperate" class="com.iremote.action.infraredcode2.TvOperationAction" method="execute"/>
		
	   <action name="remotekeystudy" class="com.iremote.action.infraredcode2.RemoteKeyStudyAction" method="execute"/>
	   <action name="querystatusofremotekeystudy" class="com.iremote.action.infraredcode2.QueryStatusOfRemoteKeyStudyAction" method="execute"/>
	   <action name="deleteremotekeycode" class="com.iremote.action.infraredcode2.DeleteRemoteKeyCodeAction" method="execute"/>
	   <action name="sendremotekeycode" class="com.iremote.action.infraredcode2.SendRemoteKeyCodeAction" method="execute"/>
   </package>
</struts>